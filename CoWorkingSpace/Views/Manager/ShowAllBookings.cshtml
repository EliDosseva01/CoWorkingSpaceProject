@model IEnumerable<CoWorkingSpace.Core.Models.BookingViewModel>
@{
    ViewBag.Title = "All bookings";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/AllBookingsStyle.css" asp-append-version="true" />

<h2>All Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Date.ToString("MM/dd/yyyy")</td>
                <td>@booking.StartTime</td>
                <td>@booking.EndTime</td>
                <td>@booking.Price</td>
                <td>@booking.Status</td>
                <td>
                    @if (booking.Status == "Pending")
                    {
                        <a href="@Url.Action("ConfirmBooking", new { id = booking.Id })" class="btn btn-success">Confirm</a>
                        <a href="@Url.Action("RejectBooking", new { id = booking.Id })" class="btn btn-danger">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
