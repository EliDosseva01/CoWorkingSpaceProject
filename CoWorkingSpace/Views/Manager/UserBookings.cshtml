@model IEnumerable<BookingViewModel>

@{
    ViewBag.Title = "User Bookings";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/AllBookingsStyle.css" asp-append-version="true" />

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Price</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr class="tr-header">
                    <td>@booking.Date.ToString("MM/dd/yyyy")</td>
                    <td>@booking.StartTime</td>
                    <td>@booking.EndTime</td>
                    <td>@booking.Price BGN</td>
                    <td>
                        <form asp-controller="Booking" asp-action="Delete" asp-route-id="@booking.Id" asp-route-userId="@booking.UserId">

                            <div>
                                <input type="submit" value="Delete" class="btn-edit"
                                       onclick="return confirm('Are you sure you want to delete this booking ?')" />
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="empty"> This user does not have any bookings yet.</p>
}

<script src="~/js/main.js"></script>